@model WarrenHills01.Entidades.CodigoV

@{
    ViewBag.Title = "ClaveRegistro";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

<div class="container">

    <div class="row justify-content-center">
        <div class="col-md-12 col-lg-10">
            <div class="wrap d-md-flex">
                
                <div class="login-wrap p-4 p-lg-5 " style="width: 100%">
                    <div class="d-flex ">
                        <div class="w-100 text-center">
                            <h3 class="mb-4 ">Verificación</h3>
                        </div>

                    </div>
                    @if (ViewBag.MensajeCodigo != null)
                    {
                        <div class="alert alert-danger" role="alert">
                            @ViewBag.MensajeCodigo
                        </div>
                    }


                    @using (Html.BeginForm("VerificarCodigo", "Login", FormMethod.Post))
                    {
                        <div action="#" class="signin-form">
                            <div class="form-group mb-3 text-center">
                                <label class="label" for="name">Ingresa codigo para registrarte</label>
                                @Html.TextBoxFor(m => m.Codigo, new { @class = "form-control text-center", @placeholder = "Codigo", required = "required" })
                            </div>

                            <div class="form-group">
                                <button type="submit" class="form-control btn btn-primary submit px-3">Verificar</button>
                            </div>

                        </div>
                    }

                    <hr>
                    <p class="text-center">Ya tienes cuenta?</p>
                    <div class="form-group">
                        <button type="button" onclick="location.href='@Url.Action("Index","Login")'" class="form-control btn btn-primary submit px-3">Iniciar Sesión</button>
                    </div>


                </div>
            </div>
        </div>
    </div>
</div>

